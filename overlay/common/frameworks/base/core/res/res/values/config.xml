<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">
    <!-- Disable auto-rotation -->
    <bool name="config_supportAutoRotation">false</bool>

    <!-- Don't change UI states if possible -->
    <bool name="config_lockUiMode">true</bool>

    <!-- Button behaviour -->
    <integer name="config_shortPressOnPowerBehavior">0</integer>

    <!-- Wallpaper behaviour -->
    <bool name="config_enableWallpaperService">false</bool>
    <bool name="config_checkWallpaperAtBoot">false</bool>

    <!-- Single volume stream -->
    <bool name="config_single_volume">true</bool>
    <!-- Don't change volume -->
    <bool name="config_useFixedVolume">true</bool>

    <!-- Disable dreams -->
    <bool name="config_dreamsSupported">false</bool>

    <!-- Disable recents if SysUI on -->
    <bool name="config_hasRecents">false</bool>

    <!-- Freeform windows -->
    <bool name="config_freeformWindowManagement">true</bool>

    <!-- Declare no home screen for dependencies -->
    <bool name="config_noHomeScreen">true</bool>
</resources>